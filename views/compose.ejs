<%- include("partials/header")-%>

<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label>Title</label>
    <input type="text" class="form-control" name="postTitle" placeholder="Your Title" autocomplete="off">
    <label>Post</label>
    <textarea  class="form-control" name="postBody" rows="4" cols="50"></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="buttonName" value="composed">Publish</button>
</form>

